<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/iv_bg_height"
                android:scaleType="fitXY"
                android:src="@drawable/splash_img" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/iv_back_layout_margin"
                android:layout_marginRight="@dimen/iv_back_layout_margin"
                android:layout_marginTop="@dimen/ll_parent_margin_top">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/back_white" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/share_icon" />
            </RelativeLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/iv_back_layout_margin"
            android:layout_marginRight="@dimen/iv_back_layout_margin"
            android:layout_marginTop="@dimen/iv_back_layout_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="Nike Shoes"
                android:textColor="@color/colorLightBlack"
                android:textSize="@dimen/tv_releted_products_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="69 KD"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/tv_products_price_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ll_child_margin_top_bottom"
                android:layout_marginTop="@dimen/ll_child_margin_top_bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/ll_select_color_qty_margin_left_right"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/str_options"
                            android:textColor="@color/colorLightBlack"
                            android:textSize="@dimen/tv_select_color_qty_text_size" />

                        <TextView
                            android:id="@+id/tvSelectProductColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/tv_select_color_qty_margin_top"
                            android:background="@drawable/ic_background_2"
                            android:drawableRight="@mipmap/cart_dropdown_arrow"
                            android:fontFamily="@font/lato_regular"
                            android:padding="@dimen/tv_select_color_qty_inside_padding"
                            android:text="@string/str_dark_blue"
                            android:textColor="@color/color_1"
                            android:textSize="@dimen/tv_select_color_qty_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ll_select_color_qty_margin_left_right"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/str_quantity"
                            android:textColor="@color/colorLightBlack"
                            android:textSize="@dimen/tv_select_color_qty_text_size" />

                        <TextView
                            android:id="@+id/tvSelectProductQuantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/tv_select_color_qty_margin_top"
                            android:background="@drawable/ic_background_2"
                            android:drawableRight="@mipmap/cart_dropdown_arrow"
                            android:fontFamily="@font/lato_regular"
                            android:padding="@dimen/tv_select_color_qty_inside_padding"
                            android:text="1"
                            android:textColor="@color/color_1"
                            android:textSize="@dimen/tv_select_color_qty_text_size" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvAddToCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginTop="@dimen/ll_child_margin_top_bottom"
                    android:background="@drawable/ic_background_7"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:padding="@dimen/tv_add_to_cart_padding"
                    android:text="Add to Cart"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/tv_select_color_qty_text_size" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="Description"
                android:textColor="@color/colorLightBlack"
                android:textSize="@dimen/tv_description_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/color_1"
                android:textSize="@dimen/tv_product_description_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tv_estemated_delivery_margin_top"
                android:fontFamily="@font/lato_bold"
                android:text="Estimeted Delivery"
                android:textColor="@color/colorLightBlack"
                android:textSize="@dimen/tv_description_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="Deliver to Kuwait within 1 to 2 days"
                android:textColor="@color/color_1"
                android:textSize="@dimen/tv_product_description_text_size" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/rl_store_info_margin_top_bottom"
                android:layout_marginTop="@dimen/rl_store_info_margin_top_bottom">

                <com.app.shopzz.customView.CircleImageView
                    android:id="@+id/iv_imgProfile"
                    android:layout_width="@dimen/iv_store_img_width_height"
                    android:layout_height="@dimen/iv_store_img_width_height"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/product_image_big"
                    app:border_color_c="@color/colorWhite"
                    app:border_width_c="0dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ll_store_rating_margin_left"
                    android:layout_toRightOf="@id/iv_imgProfile"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_bold"
                        android:text="Shoe Store"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="@dimen/tv_product_description_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_regular"
                        android:text="(Kuwait)"
                        android:textColor="@color/color_1"
                        android:textSize="@dimen/tv_see_more_text_size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/tv_see_more_drawable_padding"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivRatingOne"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/rating_star_rated" />

                            <ImageView
                                android:id="@+id/ivRatingTwo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/rating_star_rated" />

                            <ImageView
                                android:id="@+id/ivRatingThree"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/rating_star_normal" />

                            <ImageView
                                android:id="@+id/ivRatingFour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/rating_star_normal" />

                            <ImageView
                                android:id="@+id/ivRatingFive"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/rating_star_rated" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/ll_store_rating_margin_left"
                            android:fontFamily="@font/lato_bold"
                            android:text="(25)"
                            android:textColor="@color/color_1"
                            android:textSize="@dimen/tv_see_more_text_size" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvFollow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_background_1"
                    android:fontFamily="@font/lato_bold"
                    android:onClick="onViewClick"
                    android:paddingBottom="@dimen/tv_follow_padding_bottom"
                    android:paddingLeft="@dimen/tv_follow_padding_left_right"
                    android:paddingRight="@dimen/tv_follow_padding_left_right"
                    android:paddingTop="@dimen/tv_follow_padding_top"
                    android:text="Follow"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/tv_products_price_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/lato_bold"
                    android:text="Related Products"
                    android:textColor="@color/colorLightBlack"
                    android:textSize="@dimen/tv_releted_products_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/tv_see_more_drawable_padding"
                    android:drawableRight="@mipmap/view_all_arrow"
                    android:fontFamily="@font/lato_bold"
                    android:text="See more"
                    android:textColor="@color/color_1"
                    android:textSize="@dimen/tv_see_more_text_size" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewMoreProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
